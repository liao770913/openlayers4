<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link asp-append-version="true" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link asp-append-version="true" rel="stylesheet" href="~/lib/openlayers/ol.min.css" />

    <script asp-append-version="true" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script asp-append-version="true" src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script asp-append-version="true" src="~/lib/openlayers/ol.js"></script>

    <environment include="Development">
        <script asp-append-version="true" src="~/js/ol4.js"></script>
        <link asp-append-version="true" rel="stylesheet" href="~/css/ol4.css" />
        <link asp-append-version="true" rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <script asp-append-version="true" src="~/js/ol4.min.js"></script>
        <link asp-append-version="true" rel="stylesheet" href="~/css/ol4.min.css" />
        <link asp-append-version="true" rel="stylesheet" href="~/css/site.min.css" />
    </environment>

</head>
<body>
    <main role="main">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
</body>
</html>
